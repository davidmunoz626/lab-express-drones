<h2>Update the drone</h2>
<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">


            <form action="/drones/{{_id}}/edit" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>
                <div class="mb-3">
                    <label for="propellers" class="form-label">Motores</label>
                    <input type="number" class="form-control" id="propellers" name="propellers" value="{{propellers}}">
                </div>

                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">Velocidad Maxima</label>
                    <input type="number" class="form-control" id="maxSpeed" name="maxSpeed" value="{{maxSpeed}}">
                </div>

                <div class="d-grid">
                    <input type="submit" class="btn btn-dark" value="editar"></input>
                </div>

            </form>


        </div>
    </div>