<h2>Available drones</h2>
<div class="row justify-content-center d-flex">

    {{#each drones}}
    <div class="card" style="width: 18rem;">

        <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <p class="card-text"> Motores:{{propellers}}</p>
            <p class="card-text">Velocidad Maxima:{{maxSpeed}}</p>
            <a href="/drones/{{_id}}/edit" class="btn btn-warning">Editar</a>
            <form action="/drones/{{_id}}/delete" method="POST" style="display: inline">
                <input type="submit" value="eliminar" class="btn btn-danger">
            </form>

        </div>
    </div>
    {{/each}}
</div>